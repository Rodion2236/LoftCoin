<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/wallets">

    <fragment
        android:id="@+id/wallets"
        android:name="com.rodion2236.loftcoin.ui.activity.wallet.WalletsFragment"
        android:label="@string/wallets"
        tools:layout="@layout/fragment_wallets" />

    <fragment
        android:id="@+id/rates"
        android:name="com.rodion2236.loftcoin.ui.activity.rates.RatesFragment"
        android:label="@string/rates"
        tools:layout="@layout/fragment_rates" />

    <fragment
        android:id="@+id/converter"
        android:name="com.rodion2236.loftcoin.ui.activity.converter.ConverterFragment"
        android:label="@string/converter"
        tools:layout="@layout/fragment_converter" />

    <dialog
        android:id="@+id/currency_dialog"
        android:name="com.rodion2236.loftcoin.ui.activity.currency.CurrencyDialog"
        android:label="@string/choose_currency"
        tools:layout="@layout/dialog_currency"/>

</navigation>